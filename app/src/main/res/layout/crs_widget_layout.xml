<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crs_widget_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txvAtualizando"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dip"
        android:gravity="center"
        android:text="Atualizando"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/linWidgetDados"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/widgetExchangeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:text="Exchange"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widgetLine1Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line1 Label: "
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widgetLine1Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Line 1 Value"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widgetLine2Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line 2 Label: "
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widgetLine2Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Line 2 Value"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widgetLine3Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line 3 Label: "
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widgetLine3Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Line 3 Value"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="12sp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/widgetPairURL"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginTop="-54dp"
            android:contentDescription="Ir para Exchange"
            android:src="@android:drawable/ic_search_category_default"
            android:tint="@android:color/black" />

    </LinearLayout>

    <ImageView
        android:id="@+id/widgetAtualizar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginTop="-32dp"
        android:contentDescription="Atualizar"
        android:src="@android:drawable/stat_notify_sync"
        android:tint="@android:color/black" />

</LinearLayout>